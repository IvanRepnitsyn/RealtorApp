<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kvartira_omsk.realtorapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>

        <receiver android:name=".AlarmNotification"/>

        <activity
            android:name=".AddObjectActivity"
            android:label="addobject">
        </activity>

        <activity
            android:name=".AddEventActivity"
            android:label="addevent">
        </activity>

        <activity
            android:name=".AddClientActivity"
            android:label="addclient">
        </activity>

        <activity
            android:name=".ViewObjectActivity"
            android:label="viewobject">
        </activity>

        <activity
            android:name=".ViewEventActivity"
            android:label="viewevent">
        </activity>

        <activity
            android:name=".ViewClientActivity"
            android:label="viewevent">
        </activity>



    </application>

</manifest>
